<Window x:Class="Amaranth.View.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amaranth.View" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" ResizeMode="NoResize"  Closing="Window_Closing"
        Title="Настройка соединения" Height="240" Width="340">
    <Window.Background>
        <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
            <GradientStop Color="#FFC7C2C2" Offset="0"/>
            <GradientStop Color="#FFEBEBF3" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите данные для подключения к СУБД MySQL" Grid.ColumnSpan="3"/>

        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <Label Content="Сервер:" Grid.Column="0"/>
            <TextBox Text="{Binding Data.Server, UpdateSourceTrigger=PropertyChanged}"
                 PreviewTextInput="TextBoxlLen32" Grid.Column="1"/>
            <Label Content="Порт:" Grid.Column="2"/>
            <TextBox Text="{Binding Data.Port, UpdateSourceTrigger=PropertyChanged}"
                 PreviewTextInput="TextBoxlLen32" Grid.Column="3"/>
        </Grid>

        <Label Content="База данных:" Grid.Column="0" Grid.Row="2"/>
        <TextBox Text="{Binding Data.DBName, UpdateSourceTrigger=PropertyChanged}"
                 PreviewTextInput="TextBoxlLen32" Grid.Column="1" Grid.Row="2"/>

        <Label Content="Пользователь:" Grid.Column="0" Grid.Row="3"/>
        <TextBox Text="{Binding Data.UserName, UpdateSourceTrigger=PropertyChanged}"
                 PreviewTextInput="TextBoxlLen32" Grid.Column="1" Grid.Row="3"/>

        <Label Content="Пароль:" Grid.Row="4"/>
        <PasswordBox x:Name="pass" Margin="3" FontSize="14"
                 PreviewTextInput="TextBoxlLen32" Grid.Column="1" Grid.Row="4" />
        
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Right">
            <Button Content="  Ок  " Command="{Binding Ok}" CommandParameter="{Binding ., ElementName=pass}"/>
            <Button Content="Выйти" Command="{Binding Exit}"/>
        </StackPanel>
    </Grid>
</Window>
