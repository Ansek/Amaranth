<Window x:Class="Amaranth.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amaranth.View" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Авторизация" Height="200" Width="300">
    <Window.Background>
        <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
            <GradientStop Color="#FFC7C2C2" Offset="0"/>
            <GradientStop Color="#FFEBEBF3" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите данные для входа в систему" Grid.ColumnSpan="3"/>

        <Label Content="Логин:" Grid.Row="1"/>
        <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                 PreviewTextInput="TextBoxlLen32" Grid.Column="1" Grid.Row="1"/>

        <Label Content="Пароль:" Grid.Row="2"/>
        <PasswordBox x:Name="pass" Margin="3" FontSize="14"
                 PreviewTextInput="TextBoxlLen32" Grid.Column="1" Grid.Row="2" />

        <CheckBox Content="Первый вход (установка пароля)" VerticalAlignment="Center"
                  IsChecked="{Binding IsFirst}"  Grid.ColumnSpan="2" Grid.Row="3"/>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Right">
            <Button Content="  Ок  " Command="{Binding Ok}" CommandParameter="{Binding ., ElementName=pass}"/>
            <Button Content="Отмена" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
